<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reservaciones.Views.viewCrearHabitaciones"
             IconImageSource="cama.png"
             >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nombre Habitacion" ></Label>
            <Entry Keyboard="Default" ></Entry>
            <Label Text="Cantidad de Huespedes"></Label>
            <Entry Keyboard="Numeric" ></Entry>
            <Button Text="Crear Habitacion"></Button>

            <ListView >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Title}"
                              Detail="{Binding Subtitle}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>